<h1><%= @title%></h1>
 
<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<%end%>
<%end%>

<%= form_for :contact, url: create_contact_path, :html => { :id => "email_form" } do |f| %>

	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>

	<p><%= f.submit "Submit" %></p>
<% end %>
