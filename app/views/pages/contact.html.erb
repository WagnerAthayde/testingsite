<h1><%= @title%></h1>

<% if flash[:errors] %>
	<% flash[:errors].each do |e| %>
		<p><%= e %></p>
	<%end%>
<%end%>

<%= form_for :contact, url: create_contact_path do |f| %>
	<p>
		<%= f.label :full_name%><br>
		<%= f.text_field :full_name%>
	</p>

	<p>
		<%= f.label :email%><br>
		<%= f.text_field :email%>
	</p>

	<p><%= f.submit "Submit"%></p>
<% end %>
